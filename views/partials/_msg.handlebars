<!--
    ISSO É UMA PARTIAL, É PRECISO COLOCAR NO LAYOUT - MAIN

    arquivo para configurar as mensagens de erro na hora do midleware
    success_msg e erro_msg são as variaveis globais criadas na pagina app.js
    e o que vai ser exibido(o texto) é informado na pagina admin. js, dentro da rota
-->

{{#if success_msg }}
<div class="alert alert-success">{{success_msg}}</div>

{{/if}}

{{#if error_msg }}

<div class="alert alert-danger text-center " >{{error_msg}}</div>

{{/if}}

{{#if error_msg_creditos }}

<div class="alert alert-danger text-center text-white bg-danger" >{{error_msg_creditos}}</div>

{{/if}}

{{#if error}}
    <div class="alert alert-danger text-center">{{error}}</div>
{{/if}}